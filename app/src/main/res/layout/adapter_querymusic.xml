<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/itembg"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:id="@+id/music_iv_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/music" />

    <TextView
        android:id="@+id/music_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/music_iv_image"
        android:paddingLeft="10dp"
        android:text="5555"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/music_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/music_tv_title"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/music_iv_image"
        android:paddingLeft="10dp"
        android:text="5555" />

    <TextView
        android:id="@+id/music_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="time" />

</RelativeLayout>