<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#313131">

    <RelativeLayout
        android:id="@+id/controller_seeklayou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="00:00"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="00:00"
            android:textColor="@color/white" />

        <SeekBar
            android:id="@+id/seek"
            app:theme="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/endtime"
            android:layout_toRightOf="@id/starttime" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/controller_seeklayou"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/controller_slow"
            style="@style/Controller_Style"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/Controller_Image_Style"
                android:layout_width="25dp"
                android:src="@drawable/slow" />

            <TextView
                style="@style/Controller_text_style"
                android:text="快退" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/controller_before"
            style="@style/Controller_Style"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/Controller_Image_Style"
                android:src="@drawable/before" />

            <TextView
                style="@style/Controller_text_style"
                android:text="上一曲" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/controller_play"
            style="@style/Controller_Style"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/controller_iv_play"
                style="@style/Controller_Image_Style"
                android:src="@drawable/play" />

            <TextView
                android:id="@+id/controller_tv_play"
                style="@style/Controller_text_style"
                android:text="播放" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/controller_next"
            style="@style/Controller_Style"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/Controller_Image_Style"
                android:src="@drawable/next" />

            <TextView
                style="@style/Controller_text_style"
                android:text="下一曲" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/controller_speed"
            style="@style/Controller_Style"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/Controller_Image_Style"
                android:layout_width="25dp"
                android:src="@drawable/speed" />

            <TextView
                style="@style/Controller_text_style"
                android:text="快进" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>